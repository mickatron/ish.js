{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "title": "ish.js API Documentation",
        "template": "../docish",
        "encoding": "utf8",
        "destination": "docs",
        "recurse": true,
        "private": true,
        "tutorials": "tutorials"
    }
}